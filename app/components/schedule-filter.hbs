<div class="bg-green-200 flex flex-col p-4 text-gray-800 font-bold gap-2 rounded">
  <h2 class="text-2xl font-bold mb-2">Type of Event</h2>

  <label for="filter-online">
    <Input
            @id="filter-online"
            @type="checkbox"
            @checked={{this.showOnline}}
    />
    <span class="ml-2">Online</span>
  </label>


  <label for="filter-local">
    <Input
            @id="filter-local"
            @type="checkbox"
            @checked={{this.showLocal}}
    />
    <span class="ml-2">Local</span>
  </label>

  <label for="filter-anytime">
    <Input
            @id="filter-anytime"
            @type="checkbox"
            @checked={{this.showAnytime}}
    />
    <span class="ml-2">Anytime</span>
  </label>
</div>