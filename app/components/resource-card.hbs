<LinkTo class="bg-white shadow rounded flex flex-col hover:text-white active:bg-blue-400 group"
  @route="resources.resource" @model={{@resource.slug}}>
  <div class="aspect-w-16 aspect-h-9 overflow-hidden h-16 group-hover:opacity-80 group-active:opacity-100">
    {{#if @resource.imageUrl}}
    <img src="{{@resource.imageUrl}}" alt="{{@resource.title}}" class="object-cover" />
    {{/if}}
  </div>
  <div class="p-4 mt-4 prose prose-sm">
    <h3 class="font-bold group-active:text-white group-hover:text-blue-500 mb-4">
      {{@resource.title}}
    </h3>
    <div class="hidden md:block group-active:text-white mb-4">
      {{@resource.contentExcerpt}}
    </div>
    <dl class="text-gray-500 group-active:text-white">
      {{#if @resource.formLanguage}}
      <dd class="mb-2">
        {{svg-jar "flag-light" class="h-4 inline mr-2"}} {{@resource.formLanguage}}
      </dd>
      {{/if}}
      <dd>
          {{svg-jar "building-light" class="h-4 inline mr-2"}}
        <span class="inline">{{@resource.institution}}</span>
      </dd>
    </dl>
  </div>
</LinkTo>