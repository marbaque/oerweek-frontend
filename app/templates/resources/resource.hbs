<div class="bg-gray-100 pb-20">
  <div>
    <div class="hidden lg:block py-5 pt-20">Home | {{uc-words model.postType}} </div>

    <h1 class="font-bold text-3xl">{{{model.title}}}</h1>
  </div>

  <div class="bg-purple-100 p-4 lg:p-8 mt-8 pb-24 rounded">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
      <div class="col-span-5">
        {{#if model.imageUrl}}
          <img src="{{{model.imageUrl}}}" alt="{{model.title}}" class="object-fill"/>
        {{/if}}
      </div>
      <div class="flex flex-col col-span-7 gap-8">
        <dl class="bg-white w-full p-4 text-sm resource__meta">
          <dd class="">{{svg-jar "user-circle-solid" class="h-4 inline-block current-color"}} Submitted by</dd>
          <dt>{{model.contact}}</dt>

          <dd>{{svg-jar "graduation-cap-solid" class="h-4 inline-block current-color"}} Institution</dd>
          <dt>{{model.institution}}</dt>

          <dd class="resource__meta-single">{{svg-jar "globe-solid"
                                                      class="h-4 inline-block current-color"}} {{model.formLanguage}}</dd>


          {{#if model.country}}
            <dd class="resource__meta-single">{{svg-jar "graduation-cap-solid" class="h-4 inline-block current-color"}}
              {{#if model.city}}
                {{model.city}},
              {{/if}}
              {{model.country}}
            </dd>
          {{/if}}
        </dl>

        <div class="prose">
          {{{model.content}}}
        </div>
        <div class="pb-4">
          <a class="button-outline" href="{{model.link}}" target="_blank" rel="noopener noreferrer">View site</a>
        </div>
      </div>
    </div>
  </div>
</div>