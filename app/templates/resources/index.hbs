<div class="grid-x grid-margin-x title--container">
  <div class="cell auto text-center">
    <h1>Projects &amp; Resources</h1>
  </div>
</div>

<div class="grid-x grid-margin-x">
  <div class="medium-3 cell">
    <label>Filter by year</label>
    {{#power-select
      options=years
      selected=yearselected
      searchEnabled=false
      allowClear=true
      onchange=(action "selectYear") as |year|}}
      {{year}}
    {{/power-select}}
  </div>
  <div class="medium-3 cell">
    <label>Filter by Open tag</label>
    {{#power-select
      options=opentags
      selected=opentag
      searchEnabled=false
      allowClear=true
      onchange=(action "selectOpentag") as |opentag|}}
      {{opentag}}
    {{/power-select}}
  </div>
  <div class="medium-3 cell">
    <label>Filter by Language</label>
    {{#power-select
      options=languages
      selected=language
      searchEnabled=false
      allowClear=true
      onchange=(action "selectLanguage") as |language|}}
      {{language}}
    {{/power-select}}
  </div>
</div>

<div class="grid-x grid-margin-x">
  {{resource-pagination
    page=page
    pageCount=pageCount
    previousPage=(action "previousPage")
    nextPage=(action "nextPage")
  }}

  {{resource-browser resources=filteredResources}}

  {{#if filteredResources}}
    {{resource-pagination
      page=page
      pageCount=pageCount
      previousPage=(action "previousPage")
      nextPage=(action "nextPage")
    }}
  {{/if}}
</div>