<div class="bg-gray-100 py-20">
  <div class="container">
    <div class="lg:bg-white lg:rounded lg:shadow pb-4 pt-10 pb-16 lg:px-8 w-full lg:w-5/6 mx-auto">
      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <form {{action 'authenticate' on='submit'}}>
          <div class="sm:col-span-6">

            <label for="username" class="block text-sm font-medium text-gray-300">Login</label>
            {{input id='username' placeholder='Enter Login' value=username}}

            <label for="password" class="block text-sm font-medium text-gray-300 mt-4">Password</label>
            {{input id='password' placeholder='Enter Password' type='password' value=password}}

          </div>
          <div class="sm:col-span-6 mt-4">
            <button type="submit" class="button-main">Login</button>
            {{#if errorMessage}}
              <p class="text-red-600">{{errorMessage}}</p>
            {{/if}}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>