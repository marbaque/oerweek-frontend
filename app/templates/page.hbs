{{ui-hooks
  did-insert=(action 'activateFaq' model.slug)
  will-destroy=(action 'deactivateFaq' model.slug)}}

<div class="grid-container">
  <div class="grid-x grid-margin-x align-center">
    <div class="title--container cell expanded text-center">
      <h1>{{model.title}}</h1>
    </div>
    <div class="content--container medium-8 cell">
      <div class="box">
        {{{model.content}}}
      </div>
    </div>
  </div>
</div>