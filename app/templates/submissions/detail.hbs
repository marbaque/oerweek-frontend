<div class="grid-x grid-margin-x align-justify">
  <div class="small-3 cell">
    {{#link-to 'submissions.index' (query-params postStatus='draft') class='button primary'}}
      Back to submissions{{/link-to}}
  </div>
  <div class="small-3 cell text-right">
    {{#link-to 'submit.edit' model.id class="button secondary"}}Edit{{/link-to}}
    {{#if (eq model.postStatus 'publish')}}
      {{#if (eq model.postType 'resource')}}
        {{#link-to 'resources.resource' model.slug class='button primary'}}View{{/link-to}}
      {{else}}
        {{#link-to 'events.event' model.slug class='button primary'}}View{{/link-to}}
      {{/if}}
    {{/if}}
  </div>
</div>

<h1 class="font-bold text-3xl">#{{model.id}} - {{{model.title}}}</h1>


<div class="bg-purple-900 p-4 lg:p-8 mt-8 pb-24 rounded">
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
    <div class="col-span-5">
      {{#if model.imageUrl}}
        <h4>Image</h4>
        <img src="{{{model.imageUrl}}}" alt="{{model.title}}"/>
      {{else}}
        <div class="h-30 bg-purple-500 text-white py-10 px-4">
          <h4 class="text-center">No Image</h4>
        </div>
      {{/if}}

      {{#if user.isStaff}}
        <div class="mt-10">
          <dd>Current status</dd>
          <dt>
            <h5>{{model.postStatus}}</h5>
          </dt>

          <dt class="box--meta--actions--buttons">
            {{#if (not-eq model.postStatus 'publish')}}
              <button class="button" type="button" {{action 'changeSubmissionStatus' model 'publish'}}>Publish
              </button>
            {{else}}
              <button class="button disabled" type="button">Publish</button>
            {{/if}}

            {{#if (not-eq model.postStatus 'draft')}}
              <button class="button cyan" type="button" {{action 'changeSubmissionStatus' model 'draft'}}>Draft
              </button>
            {{else}}
              <button class="button cyan disabled" type="button">Draft</button>
            {{/if}}

            {{#if (not-eq model.postStatus 'trash')}}
              <button class="button secondary" type="button" {{action 'changeSubmissionStatus' model 'trash'}}>Trash
              </button>
            {{else}}
              <button class="button secondary disabled" type="button">Trash</button>
            {{/if}}
          </dt>
          <dd>Email Templates</dd>
          <dt>
            <div class="flex flex-row gap-2 justify-end">
              {{#each templates as |template|}}
                <a href="mailto:{{model.email}}?subject={{simple-template
                      templateString=template.subject
                      props=(hash
                              title=model.title
                              link=model.permalink
                              name=model.firstname)
              }}&body={{simple-template
                      templateString=template.body
                      props=(hash
                              title=model.title
                              link=model.permalink
                              name=model.firstname)
              }}"
                class="button-outline">{{template.name}}</a><br/>
              {{/each}}
            </div>
          </dt>
        </div>
      {{/if}}
    </div>
    <div class="flex flex-col col-span-7 gap-8">
      <dl class="bg-white w-full p-4 text-sm resource__meta">

        <dd class="">{{svg-jar "user-circle-solid" class="h-4 inline-block current-color"}} Submitted by</dd>
        <dt>{{model.contact}} (<a href="mailto:{{model.email}}">{{model.email}}</a>)</dt>

        <dd>{{svg-jar "graduation-cap-solid" class="h-4 inline-block current-color"}} Institution</dd>
        <dt>{{model.institution}}</dt>

        <dd class="resource__meta-single">{{svg-jar "globe-solid"
                                                    class="h-4 inline-block current-color"}} {{model.formLanguage}}</dd>
        {{#if model.country}}
          <dd class="resource__meta-single">{{svg-jar "graduation-cap-solid" class="h-4 inline-block current-color"}}
            {{#if model.city}}
              {{model.city}},
            {{/if}}
            {{model.country}}
          </dd>
        {{/if}}
      </dl>


      <div class="small-12 cell">
        {{#if (eq model.postType 'event')}}
          <h4>Event Information</h4>

          <dl class="box--submission">
            <dt>Type of Event</dt>
            <dd>{{uc-words model.eventType}}</dd>

            <dt>Title</dt>
            <dd>{{model.title}}</dd>

            <dt>Facilitator</dt>
            <dd>{{model.eventFacilitator}}</dd>

            <dt>Description</dt>
            <dd>{{model.description}}</dd>

            <dt>Event starts at</dt>
            <dd>{{moment-format model.eventTime 'YYYY-MM-DD HH:mm a'}}</dd>

            <dt>Link to the Event Page</dt>
            <dd><a href="{{model.link}}">{{model.link}}</a></dd>

            <dt>Optional link to the Web room of the event</dt>
            <dd><a href="{{model.linkwebroom}}">{{model.linkwebroom}}</a></dd>

            <dt>Language</dt>
            <dd>{{model.language}}</dd>

            <dt>Open tag(s) related to your submission</dt>
            <dd>{{join ', ' model.opentags}}</dd>
          </dl>
        {{else if (eq model.postType 'resource')}}
          <h4>Resource Information</h4>
          <dl class="box--submission">
            <dt>Title</dt>
            <dd>{{model.title}}</dd>

            <dt>Description</dt>
            <dd>{{model.description}}</dd>

            <dt>Link to the Resource</dt>
            <dd><a href="{{model.link}}">{{model.link}}</a></dd>

            <dt>License</dt>
            <dd>{{model.license}}</dd>

            <dt>Primary Language</dt>
            <dd>{{model.language}}</dd>

            <dt>Open tag(s) related to your submission</dt>
            <dd>{{join ', ' model.opentags}}</dd>
          </dl>
        {{/if}}
      </div>
    </div>
  </div>
</div>
