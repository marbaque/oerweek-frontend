<div class="content mb-10">
  <h1>Submit Your Entry</h1>
</div>

<h2 class="text-3xl font-bold mb-10">Event Information (Step 2/2)</h2>

<div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
  <div class="sm:col-span-6">
    <ValidatedInput @label="Type of Event *" @model={{model}} @valuePath="eventType" @values={{array (hash value="local" label="Local") (hash value="online" label="Online") (hash value="anytime" label="Anytime (asynchronous)")}} @type="radio" @didValidate={{didValidate}} />
  </div>
  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @valuePath="title" @label="Title of Event *" @didValidate={{didValidate}} />
  </div>
  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @valuePath="eventFacilitator" @label="Facilitator" @didValidate={{didValidate}} />
  </div>
  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @valuePath="description" @label="Short description of the event *" @type="textarea" @didValidate={{didValidate}} />
  </div>

  <div class="sm:col-span-6">
    <label class="block text-sm font-medium text-gray-500 mb-1">Event starts at *</label>
    <EmberFlatpickr @date={{readonly model.eventTime}} @enableTime={{true}} @dateFormat="Y-m-d h:i K" @onChange={{action "updateDatetime"}} />

    {{#if model.eventTime}}
      <p class="text-sm mt-2">Event will be submitted using your current local time</p>
    {{/if}}
  </div>

  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @valuePath="link" @label="Link to the event *" @type="url" @didValidate={{didValidate}} />
  </div>

  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @valuePath="linkwebroom" @label="Link to the webroom (if applicable)" @type="url" @didValidate={{didValidate}} />
  </div>

  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @options={{languages}} @valuePath="language" @label="Primary Language *" @placeholder="Select language ..." @type="power-select" @didValidate={{didValidate}} />
  </div>

  <div class="sm:col-span-6">
    <ValidatedInput @model={{model}} @options={{openTags}} @valuePath="opentags" @label="Open tag(s) related to your submission. Please select all that apply. *" @type="power-select-multiple" @didValidate={{didValidate}} />
  </div>

  <div class="sm:col-span-6">
    <label>Image for the OEW site</label>
    <ImageUpload @model={{model}} />
  </div>

  <div class="sm:col-span-6">
    <LinkTo @route="submit.general" class="button-main">Previous Page</LinkTo>

    {{#if isUploading}}
      <button class="button-main" disabled type="button">Waiting for upload to complete ...</button>
    {{else}}
      <button class="button-main" type="button" {{action 'validateForm' 'submit.preview'}}>Preview</button>
    {{/if}}
  </div>
</div>

