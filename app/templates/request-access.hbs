<div class="grid-container">
  <div class="grid-x grid-margin-x">
    <div class="medium-10 columns medium-centered">
      <div class="box">
        <p>Please enter email that you used for your OEW submission. We'll send you an email with a link that will allow
          you to modify it.</p>
        <form {{action 'requestAccess' on='submit'}}>
          <label for="email">Login</label>
          {{input id='email' placeholder='Enter Email' value=email}}
          <button type="submit" class="button primary">Request Access</button>
          {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
          {{/if}}
          {{#if message}}
            <p>{{message}}</p>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>
