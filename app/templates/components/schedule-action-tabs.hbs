<div class="cell auto text-center schedule--menu {{eventType}} grid-x">
  {{#each dates as |date index|}}
    <div class="schedule--menu__button cell small-6 medium-auto">
      <button class="{{if date.isActive 'active'}} date-{{date.value}}" type="button" {{action 'selectDate' date}}>
        {{#if (eq date.value 'other')}}
          <span class="schedule--menu__day1">OTHER<br />DAYS</span>
        {{else}}
          <span class="schedule--menu__day1">{{moment-format date.value 'ddd'}}</span>
          <span class="schedule--menu__day2">{{moment-format date.value 'DD'}}</span>
        {{/if}}
      </button>
    </div>
  {{/each}}
</div>
