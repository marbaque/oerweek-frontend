<div class="bg-white shadow rounded flex flex-col">
  <div class="aspect-w-16 aspect-h-9 overflow-hidden h-16">
    {{#if resource.imageUrl}}
      {{#link-to "resources.resource" resource.slug}}
        <img src="{{{resource.imageUrl}}}" alt="{{resource.title}}" class="object-fill" />
      {{/link-to}}
    {{/if}}
  </div>
  <div class="p-4 flex flex-col gap-2 mt-4 flex-grow flex justify-between">
    <h3 class="text-xl font-bold">
      {{#link-to "resources.resource" resource.slug}}{{{resource.title}}}{{/link-to}}
    </h3>
    <div class="prose flex-grow">
      {{{resource.contentExcerpt}}}
    </div>
    <div class="flex flex-col gap-2 text-gray-300 mt-2">
      {{#if resource.formLanguage}}
        <div>
          {{svg-jar "flag-light" class="h-4 inline"}} {{resource.formLanguage}}
        </div>
      {{/if}}
      <div>
        {{svg-jar "building-light" class="h-4 inline"}} {{resource.institution}}
      </div>
    </div>
  </div>
</div>

